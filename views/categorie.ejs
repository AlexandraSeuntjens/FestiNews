<% include header %>

<a href="/" class="return"> &#171; BACK TO HOME</a>

<h2>Nieuwsitems voor categorie <%- categories[id] %></h2>

  <% for (var i = 0; i < items.length; i++) { %>
    <% if (items[i].categories.indexOf(categories[id]) !== -1) { %>
      <section>
          <h2>
            <a href=/items/<%- items[i].id %>><%- items[i].titel %></a>
          </h2>
          <img src="/img/<%- items[i].afbeelding %>" alt="<%- items[i].titel %>">
          <p><%- items[i].datum %></p>
          <p> <%- items[i].samenvatting %> </p>
      </section>
    <% } %>
  <% } %>

<% include footer %>
